<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
	android:id="@+id/updateTop"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <LinearLayout style="@style/ButtonHolder"
            android:layout_alignParentTop="true">

            <Button
                android:id="@+id/storebutton"
				style="@style/NormalButton"
                android:text="@string/store" />
        </LinearLayout>

        <ScrollView
         android:id="@+id/aboveAdBlock"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="@dimen/adview_padding" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TableLayout
                    android:id="@+id/newTickTable"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:stretchColumns="1" >

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" >

                        <TextView
                            android:id="@+id/titel"
                            android:layout_width="0dip"
                            android:layout_margin="4dip"
                            android:layout_weight="1"
                            android:padding="5dp"
                            android:text="@string/newtick"
                            android:textAppearance="?android:attr/textAppearanceLarge" />
                    </TableRow>
                    <!-- just draw a red line -->

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="#FF0000" />

                    <TableRow>

                        <TextView
                            android:id="@+id/veld"
                            android:layout_width="0dp"
                            android:layout_margin="4dp"
                            android:layout_weight="1"
                            android:textAppearance="?android:attr/textAppearanceMedium" />
                    </TableRow>

                    <TableRow>

                        <EditText
                            android:id="@+id/waarde"
                            android:layout_width="0dp"
                            android:layout_margin="4dp"
                            android:layout_weight="1"
                            android:inputType="text"
                            android:textAppearance="?android:attr/textAppearanceMedium" />
                    </TableRow>
                </TableLayout>

                <CheckBox
                    android:id="@+id/updNotify"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:checked="false"
                    android:text="@string/notify" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <LinearLayout style="@style/AdBlockStyle" />

</RelativeLayout>
