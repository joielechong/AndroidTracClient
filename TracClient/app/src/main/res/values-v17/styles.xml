<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="ButtonBarBase.1">
        <item name="android:paddingStart">@dimen/but_padding</item>
        <item name="android:paddingEnd">@dimen/but_padding</item>
    </style>

    <style name="TextWarn">
        <item name="android:drawableStart">@drawable/ic_warn</item>
    </style>

    <style name="SortSpecBase">
        <item name="android:layout_marginStart">@dimen/half_margin</item>
        <item name="android:layout_marginEnd">@dimen/half_margin</item>
    </style>

    <style name="SortSpecBase8" parent="SortSpecBase">
        <item name="android:layout_marginEnd">@dimen/std_margin</item>
    </style>

    <style name="ActionBlockBase">
        <item name="android:layout_alignParentStart">true</item>
    </style>

    <style name="OptionsBlockBase">
        <item name="android:layout_toEndOf">@id/actionblock</item>
    </style>

    <style name="ListSearchBoxBase">
        <item name="android:drawableStart">@drawable/search</item>
    </style>

    <style name="NextToListProgress">
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:layout_toStartOf">@id/listProgress</item>
    </style>

    <style name="ListProgress">
        <item name="android:layout_alignParentEnd">true</item>
    </style>

    <style name="LoginStoreButton" parent="NormalButton">
        <item name="android:layout_gravity">start</item>
    </style>

    <style name="LoginOkButton" parent="OkButton">
        <item name="android:layout_gravity">end</item>
    </style>

</resources>
