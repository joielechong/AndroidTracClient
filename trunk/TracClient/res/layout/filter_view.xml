<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/lib/com.google.ads"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
	android:id="@+id/updateTop"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/aboveAdBlock"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:orientation="vertical"
        android:paddingBottom="@dimen/adview_padding" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/backbutton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
 				android:layout_alignParentLeft="true"
 				android:layout_alignParentStart="true"
				android:layout_toLeftOf="@+id/storebutton"
				android:layout_toStartOf="@+id/storebutton"
                android:text="@string/Back" />

            <Button
                android:id="@+id/storebutton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
 				android:layout_alignParentRight="true"
				android:layout_alignParentEnd="true"
                android:text="@string/storefilter" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <Spinner
                android:id="@+id/addspin"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="19" />

            <Button
                android:id="@+id/addbutton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:text="@string/Add" />
        </LinearLayout>

        <ListView
            android:id="@+id/filterlist"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/adBlock"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical" />

</RelativeLayout>
