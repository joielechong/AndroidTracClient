<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:id="@+id/updateTop"
	android:orientation="vertical" >

	<LinearLayout
		android:id="@+id/aboveAdBlock"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_alignParentTop="true"
		android:orientation="vertical"
		android:paddingBottom="@dimen/adview_padding" >

		<EditText
			android:id="@+id/search_box"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:drawableStart="@android:drawable/ic_menu_search"
			android:hint="@string/zoekfilter"
			android:inputType="text"
			android:textSize="@dimen/list_textsize"
			android:visibility="gone" />

		<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content" >

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_alignParentStart="true"
				android:layout_toStartOf="@+id/listProgress"
				android:text="@string/list_heading"
				android:textSize="@dimen/list_textsize" />

			<TextView
				android:id="@+id/listProgress"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_alignParentEnd="true"
				android:textSize="@dimen/list_textsize" />

		</RelativeLayout>

		<android.support.v4.widget.SwipeRefreshLayout
			xmlns:android="http://schemas.android.com/apk/res/android"
			android:id="@+id/swipe_container"
			android:layout_width="match_parent"
			android:layout_height="match_parent">

			<ListView
				android:id="@+id/listOfTickets"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:textSize="@dimen/list_textsize" />

		</android.support.v4.widget.SwipeRefreshLayout>
	</LinearLayout>

    <LinearLayout style="@style/AdBlockStyle" />

</RelativeLayout>
